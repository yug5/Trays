generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  password String?
  image    String?   // for avatar
  journals Journal[] // üîÅ related journal entries
}

model Journal {
  id        String   @id @default(cuid())
  userId    String
  content   String
  mood      String?
  date      DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}



